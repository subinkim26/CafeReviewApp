<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"


    android:orientation="vertical"
    tools:context=".searchActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <TextView

                android:id="@+id/searchtext"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/scdream2"
                android:gravity="center_horizontal|center_vertical"
                android:layout_weight="5"
                android:text="다양한 추천을 보여드릴게요"
                android:textStyle="bold"
                android:textSize="20sp"/>

            <ImageButton
                android:layout_marginTop="15dp"
                android:id="@+id/firstButton"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="200dp"

                android:layout_weight="1"

                android:adjustViewBounds="true"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/search_game" />


            <ImageButton
                android:id="@+id/secondButton"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:adjustViewBounds="true"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/search_cat" />

            <ImageButton
                android:id="@+id/thirdButton"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:layout_weight="1"

                android:adjustViewBounds="true"
                android:backgroundTint="#FFFFFF"
                android:scaleType="fitXY"
                app:srcCompat="@drawable/search_flower" />

            <ImageButton
                android:id="@+id/fourthButton"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"

                android:backgroundTint="#FFFFFF"
                android:scaleType="fitXY"
                android:layout_weight="1"
                app:srcCompat="@drawable/search_dessert" />


        </LinearLayout>


    </ScrollView>

</LinearLayout>